<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:text="饰品交易"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:background="@color/colorBlack"/>
    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新"
        android:textSize="22sp"
        android:textColor="@color/colorRed"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:layout_marginBottom="4dp"/>
    <ImageButton
        android:id="@+id/ib_gun"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_student_number"
        android:src="@drawable/ak"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"
        android:layout_marginStart="15dp"/>
    <ImageButton
        android:id="@+id/ib_rush"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="110dp"
        android:layout_below="@+id/tv_student_number"
        android:src="@drawable/p90"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"/>
    <ImageButton
        android:id="@+id/ib_knife"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="205dp"
        android:layout_below="@id/tv_student_number"
        android:src="@drawable/flaw"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"/>
    <ImageButton
        android:id="@+id/ib_glove"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="310dp"
        android:layout_below="@id/tv_student_number"
        android:src="@drawable/glove"
        android:scaleType="centerCrop"
        android:background="@color/colorWhite"/>
    <TextView
        android:id="@+id/tv_gun"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="步枪"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/ib_gun"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/tv_rush"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="冲锋枪"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/ib_rush"
        android:layout_marginStart="124dp"/>
    <TextView
        android:id="@+id/tv_knife"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="刀"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/ib_knife"
        android:layout_marginStart="235dp"/>
    <TextView
        android:id="@+id/tv_glove"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="手套"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/ib_glove"
        android:layout_marginStart="330dp"/>
    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/newprice"
        android:layout_marginTop="4dp"
        android:layout_above="@+id/view2"/>

    <View android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/view2"
        android:background="@color/colorBlack"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:id="@+id/ib_home_page"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_home_page"
        android:src="@drawable/back"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"/>
    <View android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="130dp"
        android:background="@color/colorBlack"/>
    <ImageButton
        android:id="@+id/ib_add_product"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_add_product"
        android:src="@drawable/addmoney"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"/>
    <View android:id="@+id/view3"
        android:layout_above="@+id/view4"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/colorBlack"
        android:layout_marginStart="270dp"/>
    <ImageButton
        android:id="@+id/ib_personal_center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/tv_personal_center"
        android:src="@drawable/person"
        android:layout_marginStart="320dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_home_page"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:text="首页"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_add_product"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="出售饰品"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_above="@+id/view4"
        android:layout_marginStart="165dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_personal_center"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="个人中心"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/view4"
        android:layout_marginStart="305dp"
        android:layout_marginBottom="5dp"/>
    <View android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        android:layout_alignParentBottom="true"/>
    <Button android:id="@+id/newprice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="查看最新参考价格"
        android:onClick="price"
        android:background="@color/colorWhite"
        android:layout_below="@id/tv_gun"/>
</RelativeLayout>